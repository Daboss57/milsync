# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Roblox Configuration
ROBLOX_API_KEY=your_roblox_open_cloud_api_key_here
ROBLOX_GROUP_ID=your_primary_group_id_here

# Database
DATABASE_PATH=./data/rpcommand.db

# API Server (for in-game integration)
API_PORT=3000
API_SECRET_KEY=generate_a_secure_random_key_here

# Logging
LOG_LEVEL=info
LOG_CHANNEL_ID=your_log_channel_id_here

# Features Toggle
ENABLE_XP_SYSTEM=true
ENABLE_APPLICATIONS=true
ENABLE_INGAME_API=true
ENABLE_AUTO_SYNC=true

# Rate Limiting
COMMAND_COOLDOWN_SECONDS=5
SYNC_COOLDOWN_SECONDS=300

# Verification
VERIFICATION_TIMEOUT_MINUTES=10
